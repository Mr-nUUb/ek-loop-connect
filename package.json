{
  "name": "@ek-loop-connect/monorepo",
  "packageManager": "yarn@3.0.1",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "eslint": "eslint",
    "prettier": "prettier --check .",
    "snyk": "snyk test --dev --yarn-workspaces",
    "build": "yarn workspaces foreach -v -i -p -t run build",
    "clean": "yarn workspaces foreach -v -i -p -t run clean",
    "compile": "yarn workspaces foreach -v -i -p -t run compile"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/Mr-nUUb/ek-loop-connect.git",
    "directory": "."
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "devDependencies": {
    "@types/eslint": "^7",
    "@types/eslint-plugin-prettier": "^3",
    "@types/node": "^14",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.5",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "latest",
    "eslint-plugin-tsdoc": "^0.2.14",
    "prettier": "^2.3.2",
    "snyk": "^1.696.0",
    "typescript": "~4.3"
  }
}
