{
  "name": "@ek-loop-connect/ek-cli",
  "packageManager": "yarn@3.0.0",
  "licence": "MIT",
  "version": "0.0.1",
  "main": "./src/main.ts",
  "files": [
    "/dist/**/*"
  ],
  "publishConfig": {
    "main": "./dist/main.js",
    "typings": "./dist/main.d.ts",
    "bin": {
      "ek-loop-cli": "./dist/main.js"
    }
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/Mr-nUUb/ek-loop-connect.git",
    "directory": "packages/ek-cli"
  },
  "scripts": {
    "build": "run clean && run compile",
    "clean": "rimraf ./dist ./tsconfig.build.tsbuildinfo",
    "compile": "tsc -b tsconfig.build.json --verbose",
    "prepack": "run build",
    "start": "ts-node src/main.ts"
  },
  "dependencies": {
    "@ek-loop-connect/ek-lib": "workspace:^0.0.1",
    "js-logger": "^1.6.1",
    "node-hid": "^2.1.1",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@types/node": "^14",
    "@types/node-hid": "^1",
    "@types/yargs": "^17",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  }
}
