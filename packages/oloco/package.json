{
  "name": "@oloco/oloco",
  "packageManager": "yarn@3.0.0",
  "licence": "MIT",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "files": [
    "/dist/**/*"
  ],
  "publishConfig": {
    "main": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "bin": "./dist/cli.js"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/Mr-nUUb/oloco.git",
    "directory": "packages/oloco"
  },
  "scripts": {
    "build": "run clean && run compile",
    "clean": "rimraf ./dist ./tsconfig.build.tsbuildinfo",
    "compile": "tsc -b tsconfig.build.json --verbose",
    "prepack": "run build",
    "start": "node dist/cli.js",
    "start:dev": "ts-node src/cli.ts"
  },
  "dependencies": {
    "conf": "^10.2.0",
    "detect-ts-node": "^1.0.5",
    "exit-hook": "^2.2.1",
    "js-logger": "^1.6.1",
    "node-hid": "^2.1.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^14",
    "@types/node-hid": "^1",
    "@types/yargs": "^17",
    "jest-extended": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7"
  }
}
